<MCard Class="aboutus-card" Flat>
    <div>
        <MImage Src="@Image" Height="@ImageHeight" Width="@ImageWidth" Class="aboutus-card__image" Contain />
    </div>
    <div class="aboutus-card__description">
        @Description
    </div>
</MCard>

@code {
    [Parameter, EditorRequired]
    public string? Image { get; set; }
    [Parameter, EditorRequired]
    public string? Description { get; set; }
    [Parameter]
    public bool IsMobile { get; set; }
    public int ImageHeight
    {
        get
        {
            return IsMobile ? 105 : 210;
        }
    }
    public int ImageWidth
    {
        get
        {
            return IsMobile ? 140 : 280;
        }
    }
}
