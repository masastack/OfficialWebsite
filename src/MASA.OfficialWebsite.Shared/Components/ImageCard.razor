<MCard Class="d-flex justify-center" Style="align-items: center;background-color:transparent;" Flat>
    <MImage Src="@Image" Height="@ImageHeight" Width="@ImageWidth" Class="blazor-card__margin-bottom" Style="flex:none;" />
</MCard>

@code {
    [Parameter]
    public string? Image { get; set; }

    [Parameter]
    public int Height { get; set; }

    [Parameter]
    public int Width { get; set; }

    [Parameter]
    public int MobileWidth { get; set; }

    [Parameter]
    public bool IsMobile { get; set; }

    public int ImageHeight
    {
        get
        {
            return IsMobile ? 36 : Height;
        }
    }

    public int ImageWidth
    {
        get
        {
            return IsMobile ? MobileWidth : Width;
        }
    }
}
