        <MenuableTitle Disabled="!IsMobile" Items="MenuableTitleItems">BASIC ABILITY</MenuableTitle>
        <div class="home-content__item-subtitle">现代应用治理解决方案</div>
    </div>
    <MRow NoGutters="IsMobile" class="home-content__item-cards">
        <MCol Cols="12" Md="6">
            <CommonCard Height=172
                        Class="common-card"
                        Image="https://cdn.masastack.com/images/Auth.svg"
