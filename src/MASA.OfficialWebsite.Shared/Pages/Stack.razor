@page "/stack"
@inherits AutoScrollComponentBase

<PageTitle>MASA Stack - 开源企业级开发者门户 平台工程</PageTitle>

<div class="home-banner without-carousels">
    <MRow NoGutters Style="height: 100%">
        <MCol Cols="12" Lg="6" Class="intro-wrapper">
            <div class="intro">
                <div class="intro-title">开源企业级开发者门户&#10;平台工程</div>
                <div class="intro-subtitle">让开发者聚焦业务价值的实现</div>
                <div class="intro-actions">
                    <MButton Class="gradual-btn" Text Ripple="false" Href="https://docs.masastack.com/stack/auth/get-started">开始使用</MButton>
                    <MButton Text Ripple="false" Class="text-capitalize"
                             Href="https://github.com/masastack" Target="_blank">
                        <MIcon Class="mr-2">mdi-github</MIcon>
                        Github
                    </MButton>
                    @if (!IsMobile)
                    {
                        <MMenu OffsetY Top NudgeTop="8" CloseDelay="100"
                               CloseOnContentClick="false"
                               ContentClass="demo-btn__tooltip">
                            <ActivatorContent>
                                <MButton Class="demo-btn rounded-pill emphasis--text ml-4 text-capitalize"
                                         Text
                                         Large
                                         Style="font-size: 20px"
                                         @attributes="@context.Attrs">
                                    <span class="text-decoration-underline">
                                        Live demo
                                    </span>
                                </MButton>
                            </ActivatorContent>
                            <ChildContent>
                                <div class="d-flex align-center">
                                    <div class="regular--text">
                                        <div>
                                            Username:
                                            <PCopyableText Class="d-inline-block" Text="guest">
                                                guest
                                            </PCopyableText>
                                        </div>
                                        <div>
                                            Password:
                                            <PCopyableText Class="d-inline-block" Text="guest123">
                                                guest123
                                            </PCopyableText>
                                        </div>
                                    </div>
                                    <MButton Icon
                                             Color="primary"
                                             Href="https://auth-demo.masastack.com/"
                                             Target="_blank"
                                             Class="ml-2">
                                        <MIcon>mdi-open-in-new</MIcon>
                                    </MButton>
                                </div>
                            </ChildContent>
                        </MMenu>
                    }
                </div>
            </div>
        </MCol>
        <MCol Cols="12" Lg="6" Class="cover-wrapper">
            <MImage Src="https://cdn.masastack.com/images/stack_banner.png"
                    Contain
                    Width="@("100%")" Height="@("100%")"
                    MaxWidth="BannerMaxSize" MaxHeight="BannerMaxSize" />
        </MCol>
    </MRow>

    @if (IsMobile)
    {
        <div class="home-banner__slider-wrapper"
             style="background-image: url('https://cdn.masastack.com/images/mUnion.png'); background-size: 100% 100%">
            <div style="display: contents" @onclick="ScrollToNext">
                <MIcon Small Color="#E2E7F4">mdi-chevron-double-up</MIcon>
                <div class="more">查看更多</div>
            </div>
        </div>
    }
</div>
<div class="home-content">
