@page "/aboutus"
@inherits AutoScrollComponentBase

<div class="home-banner">
    <MRow NoGutters>
        <MCol>
            <MCard class="d-flex justify-center" style="background-color:transparent;" Flat>
                @if (IsMobile)
                {
                    <MImage Src="_content/MASA.OfficialWebsite.Shared/images/logo_big.png" Width="160" Height="160" Style="margin-top:280px;flex:none;" />
                }
                else
                {
                    <MImage Src="_content/MASA.OfficialWebsite.Shared/images/logo_big.png" Width="320" Height="320" Style="margin-top:120px;flex:none;" />
                }

            </MCard>
        </MCol>
    </MRow>

    @if (IsMobile)
    {
        <div class="home-banner__slider-wrapper"
         style="background-image: url('_content/MASA.OfficialWebsite.Shared/images/mUnion.png'); background-size: 100% 100%">
            <div style="display: contents" @onclick="ScrollToNext">
                <MIcon Small Color="#E2E7F4">mdi-chevron-double-up</MIcon>
                <div class="more">
                    公司简介
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="home-banner__slider-wrapper desktop"
         style="background-image: url('_content/MASA.OfficialWebsite.Shared/images/Union.png'); background-size: 100% 100%; background-color:transparent;">
            <div class="core">公司简介</div>
        </div>
    }
</div>

<div class="home-content">
    <div class="home-content__item">
        <div class="home-content__item-header">
            <MenuableTitle Disabled="true">公司简介</MenuableTitle>
        </div>
        <MRow NoGutters="IsMobile">
            <MCol Cols="12" Md="12" Class="d-flex justify-center">
                <MCard style="background-color:transparent; width:980px;" Flat>
                    <MRow>
                        <MCol>
                            @if (IsMobile)
                            {
                                <MImage Src="_content/MASA.OfficialWebsite.Shared/images/hezhao.png" Style="border-radius:8px;margin-top:24px;flex:none;" />
                            }
                            else
                            {
                                <MImage Src="_content/MASA.OfficialWebsite.Shared/images/hezhao.png" Style="border-radius:28px;margin-top:120px;flex:none;" />
                            }
                        </MCol>
                    </MRow>
                    <MRow>
                        <MCol>
                            @if (IsMobile)
                            {
                                <p style="text-indent:24px; font-size:12px; line-height:18px;font-weight:500;color:#7681AB;">
                                    温州数闪科技有限公司，成立于2021年，是一家 开源 软件公司。致力于用 .NET技术赋能 560万.NET开发者转型为“数字化人才”，从而让企业获得 持续的创新力 和 新的增长机会，帮助企业找到数字化转型的最佳路径！
                                </p>
                            }
                            else
                            {
                                <p style="text-indent:48px; font-size:24px; line-height:48px;letter-spacing:inherit.04em;color:#7681AB;">
                                    温州数闪科技有限公司，成立于2021年，是一家 开源 软件公司。致力于用 .NET技术赋能 560万.NET开发者转型为“数字化人才”，从而让企业获得 持续的创新力 和 新的增长机会，帮助企业找到数字化转型的最佳路径！
                                </p>
                            }
                        </MCol>
                    </MRow>
                </MCard>
            </MCol>
        </MRow>
        <MRow NoGutters="IsMobile">
            <MCol Cols="12" Md="6">
                <AboutUsCard Image="_content/MASA.OfficialWebsite.Shared/images/hangzhouaddress.svg"
                             Description="浙江省杭州市钱塘区新加坡科技园9幢12层"
                             IsMobile="IsMobile" />
            </MCol>
            <MCol Cols="12" Md="6">
                <AboutUsCard Image="_content/MASA.OfficialWebsite.Shared/images/wenzhouaddress.svg"
                             Description="温州市乐清市柳市镇京东云数字经济产业园8031室"
                             IsMobile="IsMobile" />
            </MCol>
        </MRow>
    </div>
    <div class="home-content">
        <div class="home-content__item">
            <div class="home-content__item-header">
                <MenuableTitle Disabled="true">联系我们</MenuableTitle>
            </div>
            <MRow NoGutters="IsMobile">
                <MCol Cols="12" Md="12" Class="d-flex justify-center">
                    <MCard style="background-color:transparent;" Flat>
                        <MRow>
                            <MCol>
                                @if (IsMobile)
                                {
                                    <MImage Src="_content/MASA.OfficialWebsite.Shared/images/contact.png" Width="140" Height="172" Style="border-radius:16px;margin-top:24px;flex:none;" />
                                }
                                else
                                {
                                    <MImage Src="_content/MASA.OfficialWebsite.Shared/images/contact.png" Width="280" Height="345" Style="border-radius:16px;margin-top:120px;flex:none;" />
                                }
                            </MCol>
                        </MRow>
                    </MCard>
                </MCol>
            </MRow>
        </div>
    </div>
</div>
