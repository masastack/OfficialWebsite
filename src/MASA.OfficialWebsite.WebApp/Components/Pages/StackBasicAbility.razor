<MRow NoGutters="IsMobile" class="home-content__item-cards">
    @foreach (var item in Items)
    {
        <MCol Cols="12" Md="6">
            <CommonCard Height="@item.Height"
                        Class="@($"common-card {(item.rightImage ? "flex-row-reverse justify-space-between" : "")}")"
                        Title="@item.Title"
                        SubTitle="@item.SubTitle"
                        Content="@item.Content"
                        Image="@item.Image">
            </CommonCard>
        </MCol>
    }
</MRow>

@code {

    [Parameter] public bool IsMobile { get; set; }

    [Parameter] public List<Stack.StackFeature> Items { get; set; } = new();

}
